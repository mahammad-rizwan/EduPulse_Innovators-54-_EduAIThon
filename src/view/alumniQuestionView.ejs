<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Question Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
      padding: 40px 20px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
      max-width: 900px;
      margin: auto;
    }

    .question-box {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }

    .status-badge {
      font-weight: bold;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 0.85rem;
    }

    .status-pending {
      background-color: #ffeaa7;
      color: #d35400;
    }

    .status-resolved {
      background-color: #dff9fb;
      color: #27ae60;
    }

    .replies-section {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .reply {
      border-left: 4px solid #3498db;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 15px;
      background-color: #fefefe;
    }

    .reply .replier-name {
      font-weight: bold;
      margin-bottom: 4px;
      color: #2c3e50;
    }

    .reply-form textarea {
      resize: vertical;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mb-4">üìñ Question Details</h2>

    <div class="question-box">
      <h4><%= question.title %></h4>
      <p><%= question.description %></p>
      <span class="status-badge <%= question.status === 'pending' ? 'status-pending' : 'status-resolved' %>">
        <%= question.status %>
      </span>
      <div class="text-muted mt-2">Posted on: <%= new Date(question.uploaded_date).toLocaleDateString() %></div>
    </div>

    <div class="replies-section mb-4">
      <h5>üí¨ Replies</h5>
      <% if (replies.length === 0) { %>
        <p class="text-muted fst-italic">No replies yet. Be the first to reply!</p>
      <% } else { %>
        <% replies.forEach(reply => { %>
          <div class="reply">
            <div class="replier-name"><%= reply.replier_name %></div>
            <div><%= reply.reply %></div>
            <div class="text-muted small mt-1">Replied on <%= new Date(reply.replied_at).toLocaleDateString() %></div>
          </div>
        <% }) %>
      <% } %>
    </div>

    <h5 class="mt-4">‚úçÔ∏è Add a Reply</h5>
    <form class="reply-form" action="/question/<%= question.id %>/reply" method="POST">
      <div class="mb-3">
        <textarea name="message" class="form-control" rows="4" placeholder="Write your reply..." required></textarea>
      </div>
      <button type="submit" class="btn btn-success">Submit Reply</button>
    </form>
  </div>
</body>
</html>
