<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Questions</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f2f5;
      padding: 40px 20px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
      max-width: 1000px;
      margin: auto;
    }

    .card {
      border-left: 5px solid #007bff;
      border-radius: 12px;
      margin-bottom: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .card-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: #2c3e50;
    }

    .card-text {
      color: #555;
      max-height: 60px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .badge-status {
      padding: 5px 10px;
      font-size: 0.85rem;
      border-radius: 5px;
    }

    .badge-pending {
      background-color: #ffeaa7;
      color: #d35400;
    }

    .badge-resolved {
      background-color: #dff9fb;
      color: #27ae60;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mb-4">ðŸ“Œ My Questions</h2>

    <% if (questions && questions.length > 0) { %>
      <% questions.forEach(q => { %>
        <div class="card p-3">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <div class="card-title mb-2"><%= q.title %></div>
              <div class="card-text mb-2"><%= q.description.length > 100 ? q.description.substring(0, 100) + '...' : q.description %></div>
              <span class="badge badge-status <%= q.status === 'pending' ? 'badge-pending' : 'badge-resolved' %>">
                <%= q.status %>
              </span>
            </div>
            <div>
              <a href="/question/<%= q.id %>" class="btn btn-sm btn-primary">View More</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="alert alert-info">
        No questions posted yet.
      </div>
    <% } %>
  </div>
</body>
</html>
